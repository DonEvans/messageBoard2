<% if @new_message.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@new_message.errors.count, "error") %> 
        prohibited this message from being saved:</h2>
    <p>There were problems with the following fields:</p>
    <ul>
    <% @new_message.errors.full_new_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

