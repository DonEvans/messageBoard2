<%= render 'shared/error_messages' %>

<div class="smallContainer">
	<h1>New member signup</h1>

	<%= form_for(@user) do |f| %>
	<ul>
		<li><%= f.label :name, "Your screen name"%><br />
				<%= f.text_field :name %> </li> 

		<%= render :partial => 'selectFontAndTextColor',
												:locals => { :f => f } %>

		<li><br /><%= f.label :password, 
					"Enter password, minimum 6 characters" %>
				<br /> <%= f.password_field :password %></li>

		<li><br /><%= f.label :password_confirmation, 
								"Enter password again" %>
				<br /><%= f.password_field :password_confirmation %></li>

		<li><br /><%= f.submit "Submit" %></li>
	</ul>
	<% end %>

	<% flash.each do |key,value| %>
			<div class="<%= key %>"><%= value %></div>
	<% end %>

	<p>
		Fonts: <span style="font-family: Bad Script; color: red;">Bad Script, </span>
		<span style="font-family: Coming Soon; color: olive;">Coming Soon, </span>
		<span style="font-family: Fondamento; color: silver;">Fondamento, </span>
		<span style="font-family: Lora; color: yellow;">Lora, </span>
		<span style="font-family: Open Sans; color: teal;">Open Sans, </span>
		<span style="font-family: Ubuntu; color: orange;">Ubuntu </span>
	</p>

</div>
