<div class="smallContainer">
	<h1>Sign in</h1>

		<%= form_for(:session, :url => sessions_path) do |f| %>

		<div>
		<%= f.label :name  %><br />
		<%= f.text_field :name%>
		</div>

		<div>
		<%= f.label :password%><br />
		<%= f.password_field :password%>
		</div>

		<div>
		<%= f.submit "Sign in"%>
		</div>
		
	<% end %>

<p>New user? <%= link_to "Sign up now!", signup_path %> </p> 

	<% flash.each do |key,value| %>
			<div class="flash <%= key %>"><%= value %></div>
	<% end %>


</div>
